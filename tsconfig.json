{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "lib": ["es2022"],
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./build",
    "rootDir": "./src",
    "strictNullChecks": true,
    "removeComments": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "types": ["node"],
    "esModuleInterop": false
  },
  "exclude": ["node_modules", "test", "build/**/*"]
}